<h1>New Post</h1>

<%= form_with model: @post do |form| %>
  <p>
    <%= form.label :title%><br>
    <%= form.text_field :title%>
    </p>
    <p>
    <%= form.label :content%><br>
    <%= form.text_area :content%>
    </p>
    <p>
    <%= form.label :author%><br>
    <%= form.text_field :author%>
    </p>

    <%= form.submit 'Create Post' %>

    <% end %>

    <% link_to 'Back to Posts', posts_path %>